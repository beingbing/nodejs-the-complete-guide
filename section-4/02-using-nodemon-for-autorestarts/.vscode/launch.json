    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "restart": true,
            "runtimeExecutable": "nodemon", // to restart debugger automatically when a change is detected
            "console": "integratedTerminal"
        }
    ]
}
// you need to add nodemon globally to make this configuration run